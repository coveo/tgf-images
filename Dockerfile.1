FROM coveo/tgf:${TRAVIS_TAG}-base
LABEL tgf-image-tag=""

ARG EXE_FOLDER=/usr/local/bin
ENV TGF_IMAGE_TAG=""

# Install Shells
RUN apk update && apk add bash zsh fish bash-completion

# Installing the AWS cli
RUN apk add --no-cache python3 groff less tree && \
    pip3 install --upgrade pip && \
    pip3 install --no-cache-dir awscli mdv colorama jenkinsapi click boto3 && \
    apk add --no-cache jq zip nano vim git

RUN if [ ! -e /usr/bin/python ]; then ln -sf python3 /usr/bin/python ; fi && \
    if [ ! -e /usr/bin/pip ]; then ln -s pip3 /usr/bin/pip ; fi

# Update version here (do not move at the beginning of the file since it would slow down the docker build)
ENV TF_LINT_VERSION="0.16.2"
ENV TF_DOC_VERSION="0.9.1"
RUN curl -sLo_ https://github.com/wata727/tflint/releases/download/v${TF_LINT_VERSION}/tflint_linux_amd64.zip && unzip -p _ > ${EXE_FOLDER}/tflint && chmod +x $EXE_FOLDER/tflint && rm _ && \
    curl -sLo ${EXE_FOLDER}/terraform-docs https://github.com/segmentio/terraform-docs/releases/download/v${TF_DOC_VERSION}/terraform-docs-v${TF_DOC_VERSION}-linux-amd64 && chmod +x $EXE_FOLDER/terraform-docs
